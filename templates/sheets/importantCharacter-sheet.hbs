<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <h1>
            <input name="name" type="text" value="{{actor.name}}" placeholder="Name" />
        </h1>
    </header>
    <div class="description" style="display: grid; grid-template-columns:1fr 180px; gap:5px; padding: 0px 15px 0px 15px;">
        {{> "systems/trudvang/templates/partials/character-description-block.hbs"}}
        <img src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="180" width="180" style="object-fit: cover; object-position: top;"/>
    </div>
</form>